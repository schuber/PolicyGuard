{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "installCommand": "echo 'Skipping automatic install'",
  "outputDirectory": "frontend/dist",
  "public": true,
  "github": {
    "silent": true
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 